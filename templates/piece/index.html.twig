{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    <h1>Piece index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix_vente</th>
                <th>Libelle</th>
                <th>Quantite_stock</th>
                <th>Prix_catalogue</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.id }}</td>
                <td>{{ piece.prixVente }}</td>
                <td>{{ piece.libelle }}</td>
                <td>{{ piece.quantiteStock }}</td>
                <td>{{ piece.prixCatalogue }}</td>
                <td>
                    <a href="{{ path('piece_show', {'id': piece.id}) }}">show</a>
                    <a href="{{ path('piece_edit', {'id': piece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('piece_new') }}">Create new</a>
{% endblock %}
